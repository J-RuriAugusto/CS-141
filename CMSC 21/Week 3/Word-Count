#include <stdio.h>

int wordCount (char []);

int main () {
    char words [500];
    
    scanf ("%[^\n]", words);

    printf ("%i", wordCount (words));

    return 0;
}

int wordCount (char string []) {
    int i = 0, count = 0;

    for ( ; string [i] != '\0'; i++) {
        if (string [i] != ' ' && (string [i + 1] == ' ' || string [i + 1] == '\0'))
        count++;
    }
    
    return count;
}